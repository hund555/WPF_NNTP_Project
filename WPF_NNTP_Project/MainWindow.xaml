<Window x:Class="WPF_NNTP_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NNTP_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="CBProfile" Grid.ColumnSpan="4" SelectionChanged="CBProfile_SelectionChanged"/>
        <TextBox x:Name="email" Grid.ColumnSpan="2" Grid.Row="1"/>
        <PasswordBox x:Name="password" Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="1" />
        <Button Content="Connect" Grid.Column="4" Grid.Row="1" Click="Button_ClickAsync"/>
    </Grid>
</Window>
